URxvt*loginShell: true

! Urxvt fonts
urxvt.font: xft:Ubuntu Mono derivative Powerline:size=12
urxvt.boldFont: xft:Ubuntu Mono derivative Powerline::bold:size=12
urxvt.italicFont: xft:Ubuntu Mono derivative Powerline::italic:size=12
urxvt.boldItalicFont: xft:Ubuntu Mono derivative Powerline::bolditalic:size=12

! Fix font space
URxvt*letterSpace: -1

! Scrollbar
URxvt*scrollStyle: rxvt
