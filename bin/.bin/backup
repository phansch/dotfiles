#!/bin/sh
# shellcheck disable=SC1083

raspberrypi_ip=$(arp -n | awk '/b8:27:eb/ {print $1}')

export BORG_REPO="phansch@$raspberrypi_ip:/srv/dev-disk-by-id-usb-Intenso_External_USB_3.0_20131231015294-0-0-part1/backups/"

borg create \
  --info \
  --stats \
  --list \
  ::main-{now:%Y-%m-%d}-{hostname} \
  ~/Documents \
  ~/Pictures \
  ~/Music \
  ~/Videos \
  ~/optimize.me
