[core]
  editor = vim
  excludesfile = ~/.gitignore
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[github]
  user = phansch
[user]
  email = dev@phansch.net
  name = Philipp Hansch
[alias]
  fixup = rebase -i origin/master
  hist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset <%C(bold blue)%an %C(green)gpg: %G?%Creset>%Creset'
  undo-ci = reset --soft HEAD^
  up = pull --rebase --autostash
  wt = worktree add -b worktree_quickfix ../temp master
[push]
  default = current
[pull]
  rebase = preserve
[commit]
  template = ~/.gitmessage
  gpgSign = true
[merge]
  conflictstyle = diff3
  # Standard diff is two sets of final changes. This introduces the original text before each side's changes.
  # https://git-scm.com/docs/git-config#git-config-mergeconflictStyle
[status]
  showUntrackedFiles = all
[color]
  ui = auto
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[color "branch"]
  current = cyan
  local = yellow
  remote = green
[diff]
  tool = meld
[credential]
  helper = cred_path="/usr/share/doc/git/contrib/credential/gnome-keyring/git-credential-gnome-keyring"; test -d $cred_path && "$cred_path"
[include]
  path = .gitconfig.local
