[core]
  editor = vim
  excludesfile = ~/.gitignore
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[github]
  user = phansch
[user]
  email = dev@phansch.net
  name = Philipp Hansch
[alias]
  fixup = rebase -i origin/master
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  undo-ci = reset --soft HEAD^
  up = pull --rebase --autostash
[push]
  default = current
[commit]
  template = ~/.gitmessage
[color]
  ui = auto
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[color "branch"]
  current = cyan
  local = yellow
  remote = green
[diff]
  tool = meld
[credential]
  helper = cred_path="/usr/share/doc/git/contrib/credential/gnome-keyring/git-credential-gnome-keyring"; test -d $cred_path && "$cred_path"
