[core]
  editor = vim
  excludesfile = ~/.gitignore
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[github]
  user = phansch
[user]
  email = dev@phansch.net
  name = Philipp Hansch
[alias]
  re = rebase -i origin/master
  hist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset <%C(bold blue)%an %C(green)gpg: %G?%Creset>%Creset'
  undo-ci = reset --soft HEAD^
  up = pull --rebase --autostash
  wt = worktree add -b worktree_quickfix ../temp master
[push]
  default = current
[pull]
  rebase = preserve
[commit]
  template = ~/.gitmessage
  gpgSign = true
[merge]
  conflictstyle = diff3
  # Standard diff is two sets of final changes. This introduces the original text before each side's changes.
  # https://git-scm.com/docs/git-config#git-config-mergeconflictStyle
[status]
  showUntrackedFiles = all
[color]
  ui = auto
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[color "branch"]
  current = cyan
  local = yellow
  remote = green
[diff]
  tool = vimdiff
[credential]
  helper = /usr/share/doc/git/contrib/credential/libsecret/git-credential-libsecret
[include]
  path = .gitconfig.local
[gpg]
  program = /usr/bin/gpg2

# https://groups.google.com/forum/#!topic/binary-transparency/f-BI4o8HZW0
# check that anything we're getting is complete and sane on a regular basis
[transfer]
  fsckobjects = true
[fetch]
  fsckobjects = true
[receive]
  fsckObjects = true
[difftool]
  prompt = false
