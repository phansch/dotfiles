general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

order += "battery 0"
order += "load"
order += "disk /"
order += "tztime local"

battery 0 {
        format = "%status %percentage"
        path = "/sys/class/power_supply/BAT0/uevent"
        low_threshold = 10
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}

load {
        format = "%5min"
}

disk "/" {
        format = "%free"
}
